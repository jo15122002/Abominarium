{% extends 'base.html.twig' %}

{% block title %}Abomistar{% endblock %}

{% block leftScreen %}
<div class="container__screen">
    <div class="abomistar_header">
        <h3>{{ abomistar.name }}</h3>
        <div class="abomistar_types">
            {% for type in abomistar.types %}
                <span class="abomistar_type">{{ type.name }}</span>
            {% endfor %}
        </div>
    </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abomistar.id }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td><img src="{{ abomistar.imageUrl }}" alt="{{ abomistar.imageUrl }}"/></td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ abomistar.name }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ abomistar.size }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ abomistar.weight }}</td>
            </tr>
            <tr>
                <th>Anecdotes</th>
                <td>{{ abomistar.anecdotes ? abomistar.anecdotes|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Alimentation</th>
                <td>{{ abomistar.alimentation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_abomistar_index') }}">back to list</a>

    <a href="{{ path('app_abomistar_edit', {'id': abomistar.id}) }}">edit</a>

    {{ include('abomistar/_delete_form.html.twig') }}
</div>
{% endblock %}

{% block buttonPrev %}
    <a class="left-button unselectable" href="/abomistar/{{ abomistar.id - 1 }}">Prev</a>
{% endblock %}
{% block buttonNext %}
    <a class="right-button unselectable" href="/abomistar/{{ abomistar.id + 1 }}">Next</a>
{% endblock %}
